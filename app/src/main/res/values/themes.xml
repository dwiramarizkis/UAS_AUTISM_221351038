<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AUTISM_221351038" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/autism_blue</item>
        <item name="colorPrimaryVariant">@color/autism_dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/autism_teal</item>
        <item name="colorSecondaryVariant">@color/autism_light_teal</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorSurfaceVariant">@color/autism_light_blue</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/autism_blue</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Custom styles -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.App.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.App.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.App.Headline3</item>
        <item name="textAppearanceBody1">@style/TextAppearance.App.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.App.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>
    </style>

    <style name="Theme.AUTISM_221351038" parent="Base.Theme.AUTISM_221351038" />
    
    <!-- Custom Text Styles -->
    <style name="TextAppearance.App.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/autism_blue</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/autism_blue</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.Headline3" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/autism_blue</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
        <item name="android:textColor">@color/autism_gray</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.App.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
        <item name="android:textColor">@color/autism_gray</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/autism_gray</item>
    </style>

    <!-- Custom Button Styles -->
    <style name="Widget.App.Button.Primary" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/autism_blue</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.App.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/autism_blue</item>
        <item name="strokeColor">@color/autism_blue</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Card Styles -->
    <style name="Widget.App.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="contentPadding">20dp</item>
    </style>

    <style name="DataDictionaryCard" parent="Widget.App.Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="contentPadding">0dp</item>
    </style>

    <!-- Styles for DatasetFeaturesFragment -->
    <style name="FeatureCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">20dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="FeatureIcon">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="FeatureTextContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="FeatureTitle" parent="TextAppearance.App.Headline3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="FeatureDescription" parent="TextAppearance.App.Body2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/autism_gray</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

</resources>