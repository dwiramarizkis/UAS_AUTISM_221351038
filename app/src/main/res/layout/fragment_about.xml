<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/autism_light_blue"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/about_header_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/autism_blue"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="32dp">

                <ImageView
                    android:id="@+id/about_logo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/autism"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/circle_background"
                    android:padding="16dp"/>

                <TextView
                    android:id="@+id/about_header_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about_header_title"
                    android:textAppearance="@style/TextAppearance.App.Headline1"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/about_header_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about_header_subtitle"
                    android:textAppearance="@style/TextAppearance.App.Body1"
                    android:textColor="@color/white"
                    android:alpha="0.9"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/about_info_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_info"
                        android:tint="@color/autism_blue"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/circle_background_light"
                        android:padding="8dp"/>

                    <TextView
                        android:id="@+id/about_section_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/about_section_title"
                        android:textAppearance="@style/TextAppearance.App.Headline3"
                        android:textColor="@color/autism_blue"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/about_section_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about_section_content"
                    android:textAppearance="@style/TextAppearance.App.Body1"
                    android:lineSpacingExtra="6dp"
                    android:textColor="@color/autism_gray"
                    android:gravity="start"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Features Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fitur Utama"
                    android:textAppearance="@style/TextAppearance.App.Headline3"
                    android:textColor="@color/autism_blue"
                    android:layout_marginBottom="16dp"/>

                <!-- Feature 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check"
                        android:tint="@color/success_green"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Skrining ASD menggunakan kuesioner AQ-10"
                        android:textAppearance="@style/TextAppearance.App.Body2"
                        android:textColor="@color/autism_gray"/>
                </LinearLayout>

                <!-- Feature 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check"
                        android:tint="@color/success_green"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Model AI berbasis TensorFlow Lite"
                        android:textAppearance="@style/TextAppearance.App.Body2"
                        android:textColor="@color/autism_gray"/>
                </LinearLayout>

                <!-- Feature 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check"
                        android:tint="@color/success_green"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Analisis data demografis dan riwayat"
                        android:textAppearance="@style/TextAppearance.App.Body2"
                        android:textColor="@color/autism_gray"/>
                </LinearLayout>

                <!-- Feature 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check"
                        android:tint="@color/success_green"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Hasil prediksi yang akurat dan informatif"
                        android:textAppearance="@style/TextAppearance.App.Body2"
                        android:textColor="@color/autism_gray"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Kaggle Dataset Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/kaggle_dataset_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white"
            app:strokeColor="@color/autism_blue"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_dataset"
                        android:tint="@color/autism_blue"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/circle_background_light"
                        android:padding="8dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Dataset Sumber"
                        android:textAppearance="@style/TextAppearance.App.Headline3"
                        android:textColor="@color/autism_blue"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aplikasi ini menggunakan dataset Autism Screening on Adults dari Kaggle. Dataset ini berisi data skrining autisme pada orang dewasa dengan kuesioner AQ-10 dan informasi demografis."
                    android:textAppearance="@style/TextAppearance.App.Body2"
                    android:textColor="@color/autism_gray"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="16dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_kaggle_dataset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat Dataset di Kaggle"
                    android:textSize="14sp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    app:cornerRadius="24dp"
                    app:backgroundTint="@color/autism_blue"
                    app:icon="@drawable/ic_arrow_forward"
                    app:iconGravity="textEnd"
                    app:iconPadding="8dp"
                    android:layout_gravity="start"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Disclaimer Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/warning_orange">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_warning"
                    android:tint="@color/white"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Aplikasi ini hanya untuk skrining awal. Hasil tidak menggantikan diagnosis medis profesional. Konsultasikan dengan dokter atau psikolog untuk evaluasi lebih lanjut."
                    android:textAppearance="@style/TextAppearance.App.Body2"
                    android:textColor="@color/white"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView> 